{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "wow-notifier",
  "version": "0.1.0",
  "identifier": "com.wow-notifier.app",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "wow-notifier",
        "width": 300,
        "height": 400,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "deep-link": {
      "desktop": {
        "schemes": [
          "wow-notifier"
        ]
      }
    }
  }
}