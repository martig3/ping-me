{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "log:default",
    "deep-link:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "tesseract",
          "cmd": "tesseract",
          "args": true
        },
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": true
        }
      ]
    }
  ]
}